{
  "name": "express-svelte-template",
  "version": "0.1.0",
  "description": "Template for building basic applications with Express backend and Svelte frontend.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "eslint -c .eslintrc --fix src/**/*.*",
    "tsc": "tsc",
    "build": "npm-run-all clean lint test tsc",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts --exec npm run dev:start",
    "start": "node .",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "build:client": "rollup -c",
    "dev:client": "rollup -c -w",
    "start:client": "sirv public",
    "copy:client": "copyfiles public/**/*.* dist",
    "dev:live": "cross-env APP_ENV=development concurrently \"npm run dev\" \"npm run dev:client\"",
    "prod": "npm-run-all build build:client copy:client",
    "prod:start": "cross-env APP_ENV=production node dist",
    "prod:live": "npm-run-all prod prod:start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "sirv-cli": "^0.4.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "concurrently": "^5.0.2",
    "copyfiles": "^2.1.1",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.20.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.0",
    "typescript": "^3.7.2"
  }
}
